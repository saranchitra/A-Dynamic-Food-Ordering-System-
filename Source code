#include <stdio.h>
#define MAX_CITIES 5
#define MAX_HOTELS 4
#define MAX_MENU_ITEMS 5
struct Order 
{
    int city;
    int hotel;
    int menu;
    int quantity;
    float price;
};

struct Price
{
    float menuPrices[MAX_CITIES][MAX_HOTELS][MAX_MENU_ITEMS] ;
};
int City,Hotel,menu,menuPrices,orderCount;
float total;
char cities[MAX_CITIES][50] = {"","NAMAKKAL", "KARUR", "SALEM", "ERODE" };
